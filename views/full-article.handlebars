<div class="page-container">
    {{#if noArticle}}
    <h1>Something went wrong</h1>
    <p class="centred-text">This article does not exist.</p>
    {{else}}
    <div id="full-article">
        <div class="header-details">
            <h1>{{artFull.title}}</h1>
            <h2>By {{artFull.fName}} {{artFull.lName}} </h2>
        </div>
        <div class="all-cards">
            <div class="full-card">
                <div class="header-image">
                    <img src="/images/{{artFull.imgFileName}}">
                    <p>{{artFull.imgCaption}} </p>
                </div>
                <div class="full-content">
                    <p>{{{artFull.content}}}</p>
                </div>
            </div>        
        </div>    
    </div>

    <div class="rating">    
        {{#if user}}
            {{!-- <p>user already logged in</p>  --}}
             <div>
                   <h2 class="form-title">Rate the Article</h2> 
                   <form  action="./rating" method="post">
                   <label for="rating" class="rate-form" >
                        <input type="radio" name="rating" value= '1'>
                        <div class="radio-div"></div>1
                        <img class="star" src="/images/icons/star.png">
                    </label>
                    <label for="rating" class="rate-form" >
                        <input type="radio" name="rating" value= '2'>
                        <div class="radio-div"></div>2
                        <img class="star" src="/images/icons/two-star.png">
                    </label>
                    <label for="rating" class="rate-form" >
                        <input type="radio" name="rating" value= '3'>
                        <div class="radio-div"></div>3
                        <img class="star" src="/images/icons/three-star.png">
                    </label>
                    <label for="rating" class="rate-form" >
                        <input type="radio" name="rating" value= '4'>
                        <div class="radio-div"></div>4
                        <img class="star" src="/images/icons/four-star.png">
                    </label>
                    <label for="rating" class="rate-form" >
                        <input type="radio" name="rating" value= '5'>
                        <div class="radio-div"></div>5
                        <img class="star" src="/images/icons/five-star.png">
                    </label>
                    <input type="hidden" name="id" value="{{artFull.id}}">
                    <button type="submit">Submit</button>
                    </form>

            </div>
        {{else}}
            {{!-- <p>please login first</p>  --}}
            <p id="login-request">To add comments and rate article: <a href="/login">login</a></p>
        {{/if}}
        <h2>Current Rating: &nbsp; &nbsp;<img class="stars" src="/images/icons/three-star.png"></h2>
    </div>

    <div class="all-cards">
        <div class="header-details">
            <h1>Comments</h1>
        </div>
        {{#each comFull}}
        <div class="comment-card">
            <div class="card-avatar">
                <img src="/images/avatars/{{avatar}}">
            </div>
        <div class="card-title">
                <h4>{{fName}}  {{lName}}</h4>
            </div>
            <div class="card-content">
                <p>{{content}}</p>
                <h3 id = "display{{id}}">likes: {{likes}}</h3>
                {{#if enableUserLike}}
                <button class= "likeButtons" commentId="{{id}}" setting="add">Add Like</a></button>
                {{else}}
                <button class= "likeButtons" commentId="{{id}}" setting="remove">Remove Like</a></button>
                {{/if}}
            </div>                     
        </div>
        {{/each}}

        </div>
        {{#if user}} 
        <div>
            <h1>Add a Comment</h1>
            <form id="comment-form" class="all-cards" action="/articles/{{artFull.id}}/comments" method="post">
                <textarea name="comment" placeholder="Add your comments here..."></textarea>
                <button type="submit">Publish Comment</button>
            </form>
        </div>
      {{else}}
            {{!-- <p>please login first</p>  --}}
            <p id="login-request">To add comments and rate article: <a href="/login">login</a></p>
        {{/if}}     
    </div>    
    {{/if}}
</div>